<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.jfoenix.controls.JFXButton?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="rootPane"
           fx:controller="imageapex.show.java.controllers.DisplayWindowController">

    <ImageView fx:id="imageView">

    </ImageView>

<!--    工具栏-->
    <HBox fx:id="toolbar" alignment="CENTER"
          styleClass="bottom-toolbar" maxHeight="33" maxWidth="300" style="-fx-padding:0 6 0 6;">

        <JFXButton buttonType="FLAT" onAction="#zoomIn"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet"
                   style="-fx-background-radius: 9 0 0 9;">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/zoom_in.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#zoomOut"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/zoom_out.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#initStatus"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/one_to_one.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#fullScreen"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/full-screen.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#showPreviousImg"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/previous.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#playSlide"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="45" preserveRatio="true">
                    <Image url="@../iconsOfShow2/play.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#showNextImg"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/next.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#showInfo"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/info.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#compress"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/compress.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#edit"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/edit.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton buttonType="FLAT" onAction="#delete"
                   styleClass="bottom-toolbar-button" ripplerFill="blueviolet"
                   style="-fx-background-radius: 3 9 9 3;">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow2/delete.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton fx:id="saveButton" buttonType="FLAT" styleClass="bottom-toolbar-button" ripplerFill="blueviolet"
                   onAction="#snap">
            <graphic>
                <ImageView fitWidth="33" preserveRatio="true">
                    <Image url="@../iconsOfShow1/save.png"/>
                </ImageView>
            </graphic>
        </JFXButton>
    </HBox>

</StackPane>
